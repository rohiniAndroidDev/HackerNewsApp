<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="product_name_style">
        <item name="textColor">@color/black</item>
        <item name="android:padding">@dimen/min_padding</item>
        <item name="android:layout_marginTop">@dimen/min_margin</item>
        <item name="android:layout_marginBottom">@dimen/min_margin</item>

    </style>

    <style name="default_text_style">
        <item name="android:textSize">@dimen/default_textsize</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg_white</item>
    </style>

    <style name="loginEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#70A2CF</item>
        <item name="android:background">@drawable/background_blue_rounded</item>
        <item name="android:padding">@dimen/padding_20</item>
        <item name="android:layout_margin">@dimen/margin_20</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="nextButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/orange_bg</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:layout_margin">@dimen/margin_20</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <style name="resendOTPStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_alpha</item>
        <item name="android:padding">@dimen/padding_5</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="error_message_text_style">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor"> @color/colorRed</item>
        <item name="android:layout_margin">@dimen/margin_2</item>
        <item name="android:padding">@dimen/padding_5</item>
        <item name="android:drawableStart">@drawable/ic_error_info</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Full screen progress -->
    <style name="GrayProgressBackground" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/ColorGrayShade9</item>
    </style>

    <style name="toolbarTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">@dimen/padding_5</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="dateTimeTextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/date_time_color</item>

        <item name="android:gravity">start</item>
    </style>

    <style name="typeTextStyle" parent="defaultTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="defaultTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:padding">@dimen/padding_5</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="orderIdStyle" parent="defaultTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="textviewHintStyle"></style>
    <style name="noDataStyle" parent="mainTitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mainTitleTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="roundedTextViewStyle"   parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/dimen_24sp</item>
        <item name="android:background">@drawable/circular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="toolbar_title_text_style">
        <item name="android:textSize">16sp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="suggestionDescTextStyle">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">@color/descriptionTextColor</item>
            <item name="android:layout_margin">@dimen/margin_5</item>
            <item name="android:padding">@dimen/padding_5</item>
    </style>

    <style name="recentSearchStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:background">@drawable/background_gray_rect</item>
        <item name="android:padding">@dimen/padding_20</item>
        <item name="android:textStyle">bold</item>

    </style>
    <dimen name="dimen_14sp">14sp</dimen>
    <dimen name="dimen_24sp">24sp</dimen>
    <color name="descriptionTextColor">#333333</color>
</resources>